version: "3.3"
services:
  db:
    image: mongo:3
    deploy:
      replicas: 1
      restart_policy:
        condition: on-failure
    volumes:
      - db_state:/data/db
    logging:
      options:
        tag: xsnippet_db
    networks:
      - default

  api:
    image: {{ xsnippet_api_image }}
    environment:
      - XSNIPPET_SERVER_HOST={{ xsnippet_host }}
      - XSNIPPET_SERVER_PORT={{ xsnippet_port }}
      - XSNIPPET_SERVER_ACCESS_LOG_FORMAT={{ access_log_format }}
      - XSNIPPET_DATABASE_CONNECTION_URI=mongodb://db:27017/xsnippet
      - XSNIPPET_AUTH_SECRET={{ xsnippet_auth_secret }}
      - XSNIPPET_SNIPPET_SYNTAXES={{ xsnippet_syntaxes|join(',') }}
    deploy:
      replicas: 2
      restart_policy:
        condition: on-failure
    depends_on:
      - db
    logging:
      options:
        tag: xsnippet_api
    networks:
      - default

  web_backend:
    image: {{ xsnippet_web_backend_image }}
    environment:
      - XSNIPPET_API_URL=http://{{ xsnippet_api_server_name }}
      - ACCESS_LOG_FORMAT={{ access_log_format }}
    deploy:
      replicas: 1
      restart_policy:
        condition: on-failure
    depends_on:
      - api
    logging:
      options:
        tag: xsnippet_web_backend
    networks:
      - default

  web:
    image: nginx:latest
    configs:
      - source: web_api_config
        target: /etc/nginx/conf.d/xsnippet-webserver-api.conf
        mode: 0600
      - source: web_spa_config
        target: /etc/nginx/conf.d/xsnippet-webserver-spa.conf
        mode: 0600
    logging:
      options:
        tag: xsnippet_web
    volumes:
      - /home/xsnippet/xsnippet-web:/www/data:ro
{% if xsnippet_api_https %}
      - {{ xsnippet_api_ssl_cert }}:/etc/nginx/xsnippet_api_ssl.cert:ro
      - {{ xsnippet_api_ssl_key }}:/etc/nginx/xsnippet_api_ssl.key:ro
{% endif %}
{% if xsnippet_spa_https %}
      - {{ xsnippet_spa_ssl_cert }}:/etc/nginx/xsnippet_spa_ssl.cert:ro
      - {{ xsnippet_spa_ssl_key }}:/etc/nginx/xsnippet_spa_ssl.key:ro
{% endif %}
    deploy:
      replicas: 1
      restart_policy:
        condition: on-failure
    depends_on:
      - api
    # "publish" the exposed port to the host effectively configuring a DNAT iptables rule. This
    # is useful for us, becase we get real remote IPs in nginx logs instead of Docker Swarm VIP
    ports:
      - target: 80
        published: 80
        protocol: tcp
        mode: host
{% if xsnippet_api_https or xsnippet_spa_https %}
      - target: 443
        published: 443
        protocol: tcp
        mode: host
{% endif %}
    networks:
      - default
networks:
  default:

volumes:
  db_state:

configs:
  web_api_config:
    file: ./xsnippet-webserver-api.conf
  web_spa_config:
    file: ./xsnippet-webserver-spa.conf
